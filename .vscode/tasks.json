// .vscode/tasks.json (COMMIT this file)
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ Start Development Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "üîß Build Philippine CRM",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "üß™ Run Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "üóÑÔ∏è Supabase Reset Database",
      "type": "shell",
      "command": "supabase",
      "args": ["db", "reset"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "üìä Supabase Generate Types",
      "type": "shell",
      "command": "supabase",
      "args": ["gen", "types", "typescript", "--local", ">", "src/types/database.types.ts"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "üîç Check for Secrets",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "git diff --cached | grep -E '(secret|key|password|token)' --color=always || echo '‚úÖ No secrets found'"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    }
  ]
}